<h1> Bulk Discounts Index Page for <%= @merchant.name %></h1>
<%= link_to "Create a new discount",  new_merchant_bulk_discount_path(@merchant) %>


<ul>
<% @merchant.bulk_discounts.each do |discount| %>
  <div id= "discount-<%= discount.id %>">
    <li> Discount: <%= discount.percentage_discount %>% off if customer buys <%= discount.quantity_threshold %> or more items</li>
    <%= link_to "Delete", merchant_bulk_discount_path(@merchant, discount.id), method: :delete, local: true %>
 </div>
 <% end %>

 </ul>